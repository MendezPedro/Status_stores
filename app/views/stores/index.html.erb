<div class="container">
  <% @stores.each do |s| %>
    <div class="card my-3">
      <div class="card-body my-3">
        <h3 class="card-title text-danger">Datos del local</h3>
        <div>
          <h5 class="card-title">Nombre: <%= s.name %></h5>
          <% if s.status == "ok" %>
            <span class="btn btn-success btn-block"><%= s.status %></span>
          <% elsif s.status == "warning" %>
            <span class="btn btn-warning btn-block"><%= s.status %></span>
          <% else %>
            <span class="btn btn-danger btn-block"><%= s.status %></span>
          <% end %>
          <p class="card-text">Fecha de actualización: <%= (s.updated_at - 4.hours).strftime("%H:%M:%S - %d/%m/%Y") %></p>
        </div> 
        <div class="row my-3">
          <h3 class="text-danger">Dispositivos</h3>
          <% s.device_server.each do |d| %>
            <div class="col-sm-12 col-lg-4">
              <div class="card my-3">
                <div class="card-body">
                  <p class="card-title">Nombre: <%= d.name %></p>
                  <% if d.status == "ok" %>
                    <span class="btn btn-success btn-block"><%= d.status %></span>
                  <% else %>
                    <span class="btn btn-danger btn-block"><%= d.status %></span>
                  <% end %>
                  <p class="card-text">Fecha de actualización: <%= (d.updated_at - 4.hours).strftime("%H:%M:%S - %d/%m/%Y") %></p>
                </div> 
              </div>
            </div> 
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= button_to "realiza el job", stores_server_path, remote: true %>